package <%=packageName%>.config.apidocs;


import com.mycompany.myapp.service.OpenApiService;
import org.springframework.context.annotation.Configuration;
import org.springframework.core.annotation.Order;
import org.springframework.http.HttpMethod;
import org.springframework.security.config.annotation.web.builders.WebSecurity;
import org.springframework.security.config.annotation.web.configuration.WebSecurityConfigurerAdapter;

@Configuration
@Order(1)
public class OpenApiSecurityConfig extends WebSecurityConfigurerAdapter {

    private final OpenApiService openApiService;

    public OpenApiSecurityConfig(OpenApiService openApiService) {
        this.openApiService = openApiService;
    }

    @Override
    public void configure(WebSecurity web) throws Exception {
        web.ignoring()
            .antMatchers(HttpMethod.GET, openApiService.getSpecLocation());
    }

}
