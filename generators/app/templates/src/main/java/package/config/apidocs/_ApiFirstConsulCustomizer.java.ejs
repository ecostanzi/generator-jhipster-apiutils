package <%=packageName%>.config.apidocs;

import org.springframework.boot.info.BuildProperties;
import org.springframework.beans.factory.annotation.Value;
import org.springframework.cloud.consul.serviceregistry.ConsulRegistrationCustomizer;
import org.springframework.context.annotation.Bean;
import org.springframework.context.annotation.Configuration;
import org.springframework.context.annotation.Primary;

import <%=packageName%>.service.OpenApiService;

import java.util.ArrayList;
import java.util.List;
import java.util.Optional;

@Configuration
public class ApiFirstConsulCustomizer {

    @Bean
    @Primary
    public ConsulRegistrationCustomizer apiFirstServiceCustomizer(OpenApiService openApiService, Optional<BuildProperties> buildProperties,
                                                                  @Value("${spring.application.name}") String appName) {
        return registration -> {
            List<String> tags = registration.getService().getTags();
            if(tags == null){
                tags = new ArrayList<>();
            }
            tags.add("api=" + openApiService.getApiVersion());

            <%_ if (addFabioTags) { _%>
            //fabio upstream rules
            String appNamePath = "/" + appName;
            tags.add(String.format("urlprefix-%s strip=%s", appNamePath, appNamePath));

            String apiFirstPath = "/" + appName + "/api/v" + openApiService.getApiVersion();
            tags.add(String.format("urlprefix-%s strip=%s", apiFirstPath, apiFirstPath));

            if(buildProperties.isPresent()){
                String buidVersionPath = "/" + appName + "/v" + buildProperties.get().getVersion();
                tags.add(String.format("urlprefix-%s strip=%s", buidVersionPath, buidVersionPath));
            }
            <%_ } _%>
        };
    }
}
